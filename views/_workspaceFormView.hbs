<section class="workspace col m-4 p-2 ">
          <div class="workspace-body row">
            <form class="col-8 left" action="/workspace/form" method="POST" >
                {{#if data.space._id}}<input type="text"  name="_id" value="{{data.space._id}}" hidden>{{/if}}
              <div class="mb-3">
                <h5>WorkSpace Name:</h5>
                <input type="text" name="name" {{#if data.space.name}}value="{{data.space.name}}"{{/if}}>
              </div>
            <div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Statuses:</label>
                  </div>
                  <select class="custom-select" id="inputGroupSelect01" name="status">
                    {{#each data.space.custom_statuses}}
                      <option value="{{this.name}}">{{ this.name}}</option>
                    {{/each}}
                    {{#if data.space.default_statuses}}
                      <option value="{{data.space.default_statuses._id}}">{{data.space.default_statuses.name}}</option>
                    {{/if}}
                    {{#if data.default_statuses }}
                        <option value="{{data.default_statuses._id}}">{{data.default_statuses.name}}</option>
                    {{/if}}
                  </select>
                </div>

                {{!-- Default Status collapse --}}
                <div>                  
                  {{#if data.space.default_statuses}}
                      <button class="" type="button" data-bs-toggle="collapse" data-bs-target="#{{data.space.default_statuses.name}}" aria-expanded="false" aria-controls="collapseExample">
                        {{data.space.default_statuses.name}}
                      </button>
                      {{#each data.space.default_statuses.statuses}}
                        <div class="collapse m-2" id="{{this.type}}" >
                          <span type="button" class="badge badge-pill" 
                          style="color: {{this.color}};border-color:{{this.color}};border: 2px solid;">
                           {{this.status}}
                          </span>
                        </div>
                      {{/each}}
                  {{/if}}          
                </div>
                   {{!-Custom status -  --}}
               <div class="my-2">
                  {{#each data.space.custom_statuses}}
                      <button class=" " type="button" data-bs-toggle="collapse" data-bs-target="#{{this.name}}" aria-expanded="false" aria-controls="collapseExample">
                        {{this.name}}
                      </button>
                      {{#each this.statuses}}
                        <div class="collapse m-2" id="{{this.type}}" >
                          <span type="button" class="badge badge-pill" 
                          style="color: {{this.color}};border-color:{{this.color}};border: 2px solid;">
                           {{this.status}}
                          </span>
                        </div>
                      {{/each}}
                  {{/each}}
               </div>

            </div>
              
                <input type="submit" class="my-3">

            </form>
            <div class="col right">
              <h2>Space members/Team</h2>
              <p>Matt W</p>
              <p>Sim K</p>
              <p>Johnny Bron</p>
              <p>Troy V</p>

              <button>Invite member</button>
            </div>

          </div>
</section>