<header class="navbar navbar-expand-sm ">
  <div class="container-fluid">
     <a href="/dashboard" class="navbar-brand" style="background-color: inherit;"><img  src="/images/connect_logo.svg" width="50"  class="img-fluid" alt=""></a>  
            
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <form class="d-flex me-auto ">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
      <ul class="navbar-nav   mb-2 mb-lg-0 align-items-center">
       <li class="nav-item m-1">
                        <a href="#" class="p-1">Favourites</a>
                    </li>
                    <li class="nav-item m-1">
                        <a href="#" class="p-1">Notification</a>
                    </li>
                    {{#if data.current_space }}
                        <li class="nav-item m-1  dropdown">
                            <a class="nav-link dropdown-toggle p-1" href="#" id="navbarDropdown"  data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-layer-group"> Custom Status</i>
                            </a>
                            <ul class="dropdown-menu p-2" aria-labelledby="navbarDropdown">
                                {{#each data.current_space.all_statuses}}
                                 <li class="my-2 d-flex flex-row justify-content-between">
                                     <a class="button d-inline m-1 p-1 align-self-center" href="#">{{this.name}}</a>
                                     {{#ifnoteq this.name 'basic'}}
                                     <a class="button d-inline m-1 p-1 align-self-center" href="/status/form?_id={{this._id}}"><i class="fas fa-pen"></i></a>
                                     <a class="button d-inline m-1 p-1 align-self-center" href="#"><i class="fas fa-times text-danger"></i></a>
                                    {{/ifnoteq}}
                                </li>
                                {{/each}}
                                <li class="text-center">
                                    <a href="/status/form?space_id={{data.current_space._id}}" class=" p-1">+ Status</a>
                                </li>
                            </ul>
                        </li>
                    {{/if}}
                    {{#if data.current_project }} 
                        <li class="nav-item m-1">
                            <a href="/task/form?space_id={{data.current_project.workspace}}&project_id={{data.current_project._id}}" class=" p-1"><i class="fas fa-plus"> Task</i></a>
                          
                        </li>
                    {{/if}}
                    
                    <li class="nav-item m-1">
                        <a href="/logout" class="logout p-1 ">Logout </a>
                    </li>
      </ul>
    </div>
  </div>
</header>