<section class="task col m-4 p-2 ">
          <div class="task-header d-flex flex-row justify-content-between">
            <div class="p-2">Status:{{#if data.task.status}} <span style="color: {{data.task.status.color}};">{{data.task.status.status}}</span>{{/if}}</div>
            <div class="p-2">assignee of task</div>
            <div class="p-2">date created: {{#if data.task.created_at}}{{format_date data.task.created_at "ddd DD/MM/YYYY"}}{{/if}}</div>
            <div class="p-2">set due date: {{#if data.task.due_date}}{{data.task.due_date}}{{/if}} </div>
          </div>

          <div class="task-body row">
            <form class="col-8 left" action="/task/form" method="POST" enctype="multipart/form-data">
                  {{#if data.task._id}}<input type="text"  name="_id" value="{{data.task._id}}" hidden>{{/if}}
                  {{#if data.space_id}}<input type="text"  name="space_id" value="{{data.space_id}}" hidden>{{/if}}
                  {{#if data.project_id}}<input type="text"  name="project_id" value="{{data.project_id}}" hidden>{{/if}}

              <div>
                <p>Tags:
                  Bug, Sprint22
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <input type="text" name="name" id="" {{#if data.task.name}}value="{{data.task.name}}"{{/if}}>
                  </div>

                  <div class="d-flex flex-wrap mb-3">
                    <label class="input-group-text" for="inputGroupSelect01"> {{ data.active_status_template.name}}:</label>
                  <select class="custom-select" id="inputGroupSelect01" name="status">
                    {{#each data.active_status_template.statuses}}
                      <option value="{{stringify this}}" style="color: {{this.color}};">{{this.status}}</option>
                    {{/each}}
                  </select> 
                </div>
                </div>

              <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.4.25/jodit.min.css"/>
              <script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.4.25/jodit.min.js"></script>
                <textarea class="col" name="description" id="task_description" rows="10" cols="60" >  
                  {{#if data.task.description}}{{data.task.description}}{{/if}}
                </textarea>
                <script>
                       var editor = new Jodit('#task_description');
                     // editor.value = '<p>start</p>';
                  </script>

           

              <div class="my-3">
                <label for="#">Attachments/files: </label>
                <input multiple="" type="file" name="attachments">
              </div>
               <input type="submit" value="Submit">
            </form>


           

          </div>
           {{!-- Comment Section --}}
            <div class="col right d-flex flex-column justify-content-between ">
              <div>
                <h2>Task Comments</h2>
                <p>User1 moved task</p>
                <p>User1 assigned task</p>
                <p>User2 commented: lorem ipsum</p>
              </div>
              
              <form action="" method="">
                <div class="my-3">
                  <input type="text" name="text" placeholder="comment on this task">
                  <input type="submit" value="Comment">
                </div>
              </form>
            </div>
</section>